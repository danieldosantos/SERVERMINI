    halfElfCastSkill(player, {_current}, "Truque Arcano")

function halfElfHandleRacialKey(p: player, key: text) :: boolean:
  if key is not set:
    return false
  set {_agent} to lowercase key
  if {_agent} is "tato_social":
    if halfElfHasGroup(p, {@base_group}) is true:
      halfElfCastSkill(p, "HalfElf_TatoSocial", "Tato Social")
    else:
      send "&cApenas meio-elfos padrǜo podem usar Tato Social." to p
    return true
  else if {_agent} is "truque_arcano":
    execute player command "/truque_arcano"
    return true
  else if {_agent} is "fae_lights":
    execute player command "/fae_lights"
    return true
  else if {_agent} is "shadow_step" or {_agent} is "passo_faerico":
    execute player command "/shadow_step"
    return true
  else if {_agent} is "camuflagem":
    execute player command "/camuflagem_silvestre"
    return true
  return false

